<form id="monFormulaire" action="traitement.php" method="POST">
  <!-- Vos champs de formulaire ici -->
  <input type="text" name="nom" id="nomInput">
  <input type="email" name="email" id="emailInput">
  <!-- Autres champs de formulaire -->

  <button type="button" class="valider" onclick="verifierFormulaire()">Valider</button>
  <button type="button" class="autreChemin" onclick="autreChemin()">Autre Chemin</button>
</form>

function verifierFormulaire() {
  var nomInput = document.getElementById('nomInput');
  var emailInput = document.getElementById('emailInput');

  if (nomInput.value !== '' && emailInput.value !== '') {
    // Les champs requis sont remplis, permettre à l'utilisateur de cliquer sur le bouton
    document.getElementById('monFormulaire').submit();
  } else {
    // Afficher un message d'erreur ou effectuer une autre action appropriée
    alert('Veuillez remplir tous les champs requis.');
  }
}

function autreChemin() {
  // Effectuer une autre action lorsque les données du formulaire ne sont pas vides
  alert('Autre chemin à suivre...');
}
