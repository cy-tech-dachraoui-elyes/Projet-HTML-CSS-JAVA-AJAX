function verifierFormulaire() {
  var checkboxes = document.getElementsByName('qualites');
  var auMoinsUneCochee = false;

  for (var i = 0; i < checkboxes.length; i++) {
    if (checkboxes[i].checked) {
      auMoinsUneCochee = true;
      break;
    }
  }

  if (auMoinsUneCochee) {
    // Au moins une case est cochée, permettre à l'utilisateur de cliquer sur le bouton
    document.getElementById('monFormulaire').submit();
  } else {
    // Afficher un message d'erreur ou effectuer une autre action appropriée
    alert('Veuillez cocher au moins une case.');
  }
}

function autreChemin() {
  // Effectuer une autre action lorsque les cases du checkbox ne sont pas cochées
  alert('Autre chemin à suivre...');
}
